<resources>
    <!-- Base application theme.  Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



    </style>

    <style name="NoActionBarTheam" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Style for facebook.  -->
    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>
    <style name="InvisibleProgress">
        <!--<item name="android:visibility">gone</item>-->
        <item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_custom_bar</item>
        <item name="android:minHeight">60dip</item>
        <item name="android:maxHeight">60dip</item>

    </style>



    <style name="FullyTranslucent1" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress1">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorAccent">#eeeeee</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="MyEditTextTheme1">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#000000</item>
        <item name="colorAccent">#eeeeee</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="newpost_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/positive</item>
        <item name="colorSwitchThumbNormal">#cc0000</item>
    </style>







</resources>
