<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/bg_color">
    <LinearLayout
        android:id="@+id/card_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/user_placeholder"
            android:layout_gravity="center_vertical"
            android:id="@+id/userThumb_search"
            android:layout_marginLeft="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >
            <TextView
                android:id="@+id/txt_name_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aloo Parantha"
                android:textSize="18dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/txt_sub_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aloo Parantha"
                android:textSize="16dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/blackText1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:alpha=".5"
            android:layout_below="@id/txt_city_list"
            android:background="#000"/>
    </LinearLayout>


</RelativeLayout>