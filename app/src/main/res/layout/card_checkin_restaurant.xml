<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_color">
    <LinearLayout
        android:id="@+id/btn_restaurant_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/placeholder"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/txt_rname_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yo China"
                android:textColor="#fff"
                android:clickable="false"/>
            <TextView
                android:id="@+id/txt_aria_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mg Road"
                android:clickable="false"
                android:textColor="@color/blackText1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>