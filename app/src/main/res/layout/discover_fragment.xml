<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_color">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_discover"
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/arrow_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:alpha=".7"
            android:visibility="gone"
            android:background="#ffffff"

            />
        <TextView
            android:id="@+id/txt_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_no_dish"
            android:layout_centerInParent="true"
            android:textColor="@color/blackText"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="#000"
                    android:progressDrawable="@drawable/progress_bar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discover_loader_copy"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tap_to_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:padding="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_portable_wifi_off_black_48dp"
                    android:layout_gravity="center_horizontal"
                    android:tint="@color/blackText1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Cannot connect to internet \n tap to retry."
                    android:textAlignment="center"
                    android:textColor="@color/blackText1"
                    android:textSize="16sp"
                    android:clickable="false"/>
        </LinearLayout>

</RelativeLayout>