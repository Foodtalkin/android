<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/post_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/post_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/placeholder"
                    android:id="@+id/userThumb"
                    />
                <TextView
                    android:id="@+id/txt_post_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/blackText"
                    android:text="himani is having pizza Farzi Cafe"
                    android:maxLines="3"/>
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5m"
                    android:textColor="@color/colorText1"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/post_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dish_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"
                        />
                    <ImageView
                        android:id="@+id/like_heart"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/heart_overlay"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/star_rating_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignBottom="@+id/dish_img"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="7dp"
                        >
                        <ImageView
                            android:id="@+id/img_rating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_active"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_active"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_active"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_active"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_passive"
                            android:padding="5dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/post_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/home_card_padding"
                android:paddingBottom="@dimen/home_card_padding"
                >
                <LinearLayout
                    android:id="@+id/icon_comment_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_card_24"
                        android:clickable="false"/>
                    <TextView
                        android:id="@+id/txt_count_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="@dimen/txt_size_card_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_txt_icon_card"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_bookmark_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/img_icon_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bookmark_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_count_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="@dimen/txt_size_card_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_txt_icon_card"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_like_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/icon_heart_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_like_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/txt_count_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="16"
                        android:textSize="@dimen/txt_size_card_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_txt_icon_card"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_share_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/img_icon_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/icon_option_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/comment_line"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_above="@+id/comment_send_holder"
                android:alpha=".4"
                android:background="#000"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>