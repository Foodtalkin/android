<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/bg_color_old">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/placeholder"
            />
        <TextView
        android:id="@+id/txt_name_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ping's Cafe Orient"
        android:textColor="#fff"
        android:layout_marginTop="8dp"
        android:textSize="16sp"

        />
        <TextView
            android:id="@+id/txt_address_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13, main market, lodhi colony, new delhi"
            android:textColor="@color/blackText1"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <Button
                android:id="@+id/btn_call_restaurant"
                android:layout_width="120dp"
                android:layout_height="32dp"

                android:text="Call"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/follow_btn_shape"
                android:gravity="center_vertical|center_horizontal"
                />
            <TextView

                android:layout_marginLeft="20dp"
                android:id="@+id/checkin_view_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:minWidth="120dp"

                android:text="3 Checkin"
                android:textSize="15sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#fff"
                android:textAllCaps="false"

                android:background="@drawable/checkin_view_shape"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>