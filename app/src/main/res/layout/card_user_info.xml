<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fb_user_thumb"
            />
        <TextView
            android:id="@+id/full_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mandeep Singh"
            android:textColor="#fff"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            />
        <Button
            android:visibility="gone"
            android:id="@+id/btn_follow_profile"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:text="Follow"
            android:textSize="16sp"
            android:textAllCaps="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_checkins_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="#fff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkins"
                    android:textColor="#fff"
                    android:textSize="@dimen/txt_size_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_followers_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="265"
                    android:textColor="#fff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textColor="#fff"
                    android:textSize="@dimen/txt_size_icon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_following_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1026"
                    android:textColor="#fff"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textColor="#fff"
                    android:textSize="@dimen/txt_size_icon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>