<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:background="#D8D8D8">
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/blackText"/>
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingRight="16dp"
           android:paddingLeft="16dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/txt_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Pizza 30% OFF"
                   android:textSize="18dp"
                   android:textStyle="bold"
                   android:textColor="@color/blackText"/>
               <TextView
                   android:id="@+id/txt_detail"
                   android:textColor="@color/blackText1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Hurry up! only for 1st 20 users Offer Expires: 30 nov"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="20dp">
               <TextView
                   android:textColor="@color/text_green"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Confirmed"
                   android:textSize="18dp"/>
               <TextView
                   android:id="@+id/txt_value"
                   android:textColor="@color/blackText1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" "/>
           </LinearLayout>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/holder_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            >
            <LinearLayout
                android:id="@+id/holder_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txt_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIZZA30"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/blackText"/>
                <TextView
                    android:textColor="@color/blackText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to copy"/>


            </LinearLayout>
                <TextView
                    android:id="@+id/btn_buy_now"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    android:textColor="@color/wallet_holo_blue_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:textSize="18dp"/>


        </LinearLayout>
        <View
            android:layout_below="@+id/card_holder"
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="#D8D8D8"
            android:layout_marginTop="6dp"

            />
    </LinearLayout>
</RelativeLayout>