<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/navigation"
        android:id="@+id/headerroot"
        >
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/title_new_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/snow"
                android:text="Post"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/btn_post_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/snow"
                android:text="Share"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="4dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/header1"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_home1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text=""
                android:textSize="18sp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/title_home1"
                android:textColor="@color/subtitle_color"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/headerroot"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add a dish"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/slate"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hauz Khas Social"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/slate"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/smoke"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your experience"
                android:textSize="16sp"
                android:textColor="@color/slate"/>
            <RatingBar
                android:id="@+id/ratingBar1"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:stepSize="1"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/smoke"/>

        <EditText
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write a short tip"
            android:background="@null"
            android:lines="2"
            android:textSize="16sp"
            android:textColorHint="@color/silver"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="@color/smoke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share on Facebook"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <Switch
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch1"
                    android:checked="false"
                    android:theme="@style/newpost_switch"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:background="@color/smoke"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share on Twitter"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <Switch
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch12"
                    android:checked="false"
                    android:theme="@style/newpost_switch"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>