<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/snow"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/navigation"
        android:id="@+id/headerroot"
        >
        <LinearLayout
            android:id="@+id/post_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/home_card_padding"
            android:paddingBottom="@dimen/home_card_padding"
            android:layout_marginLeft="10dp"
            >
            <LinearLayout
                android:id="@+id/icon_like_holder"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/icon_heart_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart_filled"
                    android:clickable="false"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_count_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="16"
                    android:textSize="@dimen/txt_size_card_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_txt_icon_card"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/icon_comment_holder"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment_card_24"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/txt_count_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="@dimen/txt_size_card_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_txt_icon_card"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/icon_bookmark_holder"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/img_icon_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bookmark_card_24"
                    android:clickable="false"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txt_count_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="@dimen/txt_size_card_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_txt_icon_card"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>