<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
android:background="@color/bg_color"
    android:clickable="true"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#10151f"
        android:id="@+id/headerroot"
        >
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/title_new_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Rating"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/btn_rate_later"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackText1"
                android:text="Rate Later"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/header1"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_home1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text=""
                android:textSize="18sp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/title_home1"
                android:textColor="@color/subtitle_color"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/headerroot">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_dish_rating"
            android:padding="0dp"
            android:src="@drawable/placeholder"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate this dish"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/blackText1"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/btn_star_rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating_p"
                android:padding="6dp"/>
            <ImageView
                android:id="@+id/btn_star_rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating_p"
                android:padding="6dp"/>
            <ImageView
                android:id="@+id/btn_star_rating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating_p"
                android:padding="6dp"/>
            <ImageView
                android:id="@+id/btn_star_rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating_p"
                android:padding="6dp"/>
            <ImageView
                android:id="@+id/btn_star_rating5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_rating_p"
                android:padding="6dp"/>

        </LinearLayout>
        <RatingBar
            android:id="@+id/ratingBar1"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"

            android:stepSize="1"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dish rating are used to provide a better experiance \nwe use your ratings to customize the way you discover."
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/blackText1"
            android:textSize="13sp"/>
    </LinearLayout>
    <!--<SearchView
        android:id="@+id/search_view"
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:queryHint="Dish Name"
        android:queryBackground="@android:color/transparent"
        android:iconifiedByDefault="false"
        android:background="@drawable/round_bg_white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        />-->
</RelativeLayout>