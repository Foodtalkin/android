<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/post_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/placeholder"
                    android:id="@+id/userThumb"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/txt_post_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@color/blackText"
                    android:text="himani is having pizza Farzi Cafe"
                    android:maxLines="3"/>
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5m"
                    android:textColor="@color/colorText1"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/post_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dish_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:clickable="true"
                        android:src="@drawable/placeholder"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/gradient"
                        android:layout_alignParentBottom="true">

                    </View>

                    <ImageView
                        android:id="@+id/like_heart"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/heart_overlay"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/star_rating_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignBottom="@+id/dish_img"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="7dp"
                        >
                        <ImageView
                            android:id="@+id/img_rating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_white"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_white"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_white"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_white"
                            android:padding="5dp"/>
                        <ImageView
                            android:id="@+id/img_rating5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_white"
                            android:padding="5dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/post_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:id="@+id/icon_like_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"

                    >
                    <ImageView
                        android:id="@+id/icon_heart_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_like_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/txt_count_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="16"
                        android:textSize="@dimen/txt_size_card_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_txt_icon_card"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_comment_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_count_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="@dimen/txt_size_card_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_txt_icon_card"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_bookmark_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/img_icon_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bookmark_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_count_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:textSize="@dimen/txt_size_card_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_txt_icon_card"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon_share_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"

                    android:background="@drawable/ripple_effect"
                    android:clickable="true"

                    >
                    <ImageView
                        android:id="@+id/img_icon_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share_card_24"
                        android:layout_gravity="center"
                        android:clickable="false"

                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/icon_option_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:background="@drawable/ripple_effect"
                    android:clickable="true"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_card_24"
                        android:clickable="false"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/comment_line"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_above="@+id/comment_send_holder"
                android:alpha=".4"
                android:background="#000"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/btn_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/count_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="0dp"
                        android:clickable="false"
                        android:layout_marginLeft="26dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:id="@+id/btn_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/txt_like_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/silver"
                                android:clickable="false"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/txt_like_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Likes"
                                android:textColor="@color/silver"
                                android:clickable="false"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/txt_comment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textColor="@color/silver"
                                android:clickable="false"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Comments"
                                android:clickable="false"
                                android:textColor="@color/silver"
                                android:id="@+id/txt_comment_copy"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_bookmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/txt_bookmark_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:clickable="false"
                                android:textColor="@color/silver"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/txt_bookmark_copy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="Bookmarks"
                                android:clickable="false"
                                android:textColor="@color/silver"
                                android:textStyle="bold"/>
                        </LinearLayout>

                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/txt_km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="2.14 KM"
                            android:clickable="false"
                            android:textColor="@color/silver"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_tip"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/slate"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="16dp"
                    android:text=""
                    android:clickable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.66dp"
                    android:layout_above="@+id/comment_send_holder"
                    android:background="@color/silver"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>